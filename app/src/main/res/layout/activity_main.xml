<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daweiyang.ee396_e13.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="#fff">

    <Button
        android:id="@+id/addSubscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Subscription"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="28dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="28dp" />


    <EditText
        android:id="@+id/monthlyPayment"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="67dp"
        android:background="#00000000"
        android:editable="false"
        android:ems="10"
        android:inputType="none"
        android:singleLine="true"
        android:text="Monthly Payment"
        app:layout_constraintRight_toRightOf="@+id/addSubscription"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/addSubscription"
        android:layout_marginBottom="46dp"
        android:layout_marginRight="67dp" />



    <ListView
        android:id="@+id/GridView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:columnWidth="300dp"
        android:gravity = "center|bottom"
        android:dividerHeight="2dp"
        android:horizontalSpacing="1dp"
        android:stretchMode="spacingWidth"
        android:verticalSpacing="1dp"
        app:layout_constraintBottom_toTopOf="@+id/monthlyPayment"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:numColumns="1"
        android:visibility="visible"


        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />


</android.support.constraint.ConstraintLayout>
